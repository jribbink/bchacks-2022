{
  "name": "hackathon-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "dependencies": {
    "express": "^4.17.1",
    "node-livereload": "^0.6.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "npm run clean && npm run copyassets && npx tsc",
    "start": "nodemon --exec \"npm build && electron .\"",
    "express-server": "nodemon --exec \"npm run build && node ./dist/server.js\"",
    "clean": "rimraf ./dist",
    "copyassets": "copyfiles -f assets/* dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "copyfiles": "^2.4.1",
    "electron": "^17.0.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "dist",
      "node_modules"
    ],
    "ext": "ts,json,html,css"
  }
}
